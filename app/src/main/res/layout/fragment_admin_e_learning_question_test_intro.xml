<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/dimen_16">

    <ImageButton
        android:id="@+id/dismissBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ripple_effect11"
        android:contentDescription="@string/navigate_back"
        android:padding="@dimen/dimen_12"
        android:src="@drawable/ic_close"
        app:tint="@color/test_color_7" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/dismissBtn"
        android:fillViewport="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:contentDescription="@string/file_icon"
                android:src="@drawable/bulb"
                app:tint="@color/tinted_color_icon_4" />

            <TextView
                android:id="@+id/titleTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageView"
           android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/inter_regular"
                android:text="@string/toochi_dennis"
                android:textAlignment="center"
                android:textColor="@color/test_color_1"
                android:textSize="@dimen/text_32"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/descriptionTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleTxt"
           android:layout_marginTop="@dimen/dimen_32"
                android:fontFamily="@font/montserrat"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/dateTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/descriptionTxt"
                android:layout_alignParentStart="true"
             android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/montserrat"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <TextView
                android:id="@+id/durationTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/dateTxt"
                android:layout_alignParentStart="true"
                android:layout_marginTop="@dimen/dimen_16"
                android:fontFamily="@font/montserrat"
                android:text="@string/no_internet"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16" />

            <Button
                android:id="@+id/startQuizButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/durationTxt"
                android:layout_marginStart="70dp"
                android:layout_marginTop="@dimen/dimen_64"
                android:layout_marginEnd="70dp"
                android:layout_marginBottom="@dimen/dimen_64"
                android:background="@drawable/ripple_effect10"
                android:fontFamily="@font/montserrat"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:text="Take Quiz"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18" />

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>
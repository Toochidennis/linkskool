<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dimen_16"
    android:layout_marginEnd="@dimen/dimen_16"
    android:layout_marginBottom="@dimen/dimen_10"
    android:background="@drawable/edit_text_bg7"
    android:elevation="4dp"
    android:gravity="center_vertical"
    android:minHeight="40dp"
    android:padding="@dimen/dimen_10">

    <LinearLayout
        android:id="@+id/label_layout"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/tab_color"
        android:layout_alignParentTop="true"
        android:background="@drawable/circle2"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/optionLabelTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:textColor="@color/white"
            android:textSize="@dimen/text_16"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/optionsTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_toEndOf="@id/label_layout"
        android:fontFamily="@font/montserrat"
        android:text="@string/toochi_dennis"
        android:textColor="@color/black"
        android:textSize="@dimen/text_16" />

    <androidx.cardview.widget.CardView
        android:id="@+id/imageCardView"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/dimen_10"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@id/label_layout"
        android:visibility="gone"
        app:cardCornerRadius="@dimen/dimen_10">

        <ImageView
            android:id="@+id/optionImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_pic" />

    </androidx.cardview.widget.CardView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/dimen_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/commentBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/dimen_16"
            android:text="@string/comment"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:drawableTint="@color/black"
            app:drawableTopCompat="@drawable/ic_comment_24" />

        <TextView
            android:id="@+id/skillsBehaviourBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/dimen_16"
            android:text="@string/skills_and_behaviour"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:drawableTint="@color/black"
            app:drawableTopCompat="@drawable/ic_skill_behaviour" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/attendanceBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/dimen_16"
            android:text="Attendance"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:drawableTint="@color/black"
            app:drawableTopCompat="@drawable/ic_attendance" />

        <TextView
            android:id="@+id/studentBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_16"
            android:layout_weight="1"
            android:drawablePadding="@dimen/dimen_10"
            android:foreground="?android:attr/selectableItemBackground"
            android:padding="@dimen/dimen_16"
            android:text="Students"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="@dimen/text_16"
            app:drawableTint="@color/black"
            app:drawableTopCompat="@drawable/ic_people" />

    </LinearLayout>

</LinearLayout>
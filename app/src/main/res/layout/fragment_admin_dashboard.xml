<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.AdminDashboardFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_gradient_color">

        <RelativeLayout
            android:id="@+id/username_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:padding="@dimen/dimen_16">

            <TextView
                android:id="@+id/welcomeTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_toEndOf="@id/imageHolder"
                android:fontFamily="@font/montserrat"
                android:text="Welcome,"
                android:textColor="@color/white"
                android:textSize="@dimen/text_12"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/settingsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:background="@android:color/transparent"
                android:contentDescription="@string/app_name"
                android:src="@drawable/ic_settings"
                app:tint="@color/white" />

            <androidx.cardview.widget.CardView
                android:id="@+id/imageHolder"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:cardCornerRadius="42dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:contentDescription="@string/file_icon"
                    android:src="@drawable/ic_user"
                    app:tint="@color/tinted_color_1" />

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/usernameTxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/welcomeTxt"
                android:layout_marginStart="@dimen/dimen_16"
                android:layout_toEndOf="@id/imageHolder"
                android:fontFamily="@font/inter_regular"
                android:text="@string/administrator"
                android:textColor="@color/white"
                android:textSize="@dimen/text_18"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/usernameTxt"
                android:layout_marginTop="@dimen/dimen_32"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:id="@+id/studentBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tinted_color_1"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_8"
                    app:contentPadding="@dimen/dimen_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/file_icon"
                            android:src="@drawable/ic_user_graduate"
                            app:tint="@color/tinted_color_icon" />

                        <TextView
                            android:id="@+id/noOfStudentsTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/pt_serif_bold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_28"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/students"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/teachersBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tinted_color_4"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/dimen_8"
                    app:cardElevation="@dimen/dimen_10"
                    app:contentPadding="@dimen/dimen_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/file_icon"
                            android:src="@drawable/ic_teacher"
                            app:tint="@color/tinted_color_icon_4" />

                        <TextView
                            android:id="@+id/noOfTeachersTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/pt_serif_bold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_28"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/teachers"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/classBtn"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dimen_16"
                    android:layout_weight="1"
                    android:backgroundTint="@color/tinted_color_5"
                    android:foreground="?android:attr/selectableItemBackground"
                    app:cardCornerRadius="@dimen/dimen_10"
                    app:cardElevation="@dimen/dimen_10"
                    app:contentPadding="@dimen/dimen_10">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:contentDescription="@string/file_icon"
                            android:src="@drawable/ic_classroom_building"
                            app:tint="@color/tinted_color_icon_5" />

                        <TextView
                            android:id="@+id/noOfClassTxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/pt_serif_bold"
                            android:text=""
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_28"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginTop="@dimen/dimen_8"
                            android:fontFamily="@font/montserrat"
                            android:text="@string/classes"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/username_layout"
            android:layout_marginTop="@dimen/dimen_16"
            android:background="@drawable/dialog_background"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginTop="@dimen/dimen_6"
                    android:layout_toStartOf="@id/addQuestionBtn"
                    android:fontFamily="@font/inter_regular"
                    android:padding="@dimen/dimen_16"
                    android:text="@string/feeds"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/addQuestionBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="@dimen/dimen_16"
                    android:layout_marginEnd="@dimen/dimen_16"
                    android:background="@drawable/ripple_effect13"
                    android:fontFamily="@font/montserrat"
                    android:paddingStart="@dimen/dimen_10"
                    android:paddingEnd="@dimen/dimen_10"
                    android:text="@string/add_post"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_12" />

            </RelativeLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height=".5dp"
                app:dividerColor="@color/gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:progressDrawable="@drawable/progress_bg"
                    android:visibility="gone" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/questionRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="true"
                    android:paddingBottom="@dimen/dimen_32" />

                <TextView
                    android:id="@+id/errorMessageTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/montserrat"
                    android:text="@string/there_is_no_feeds_yet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_16"
                    android:visibility="gone" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>